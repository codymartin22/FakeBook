@model ShopKlee.Models.ViewModel.EditUserViewModel

@{
    ViewData["Title"] = "EditProfileView";
    var PhotoPath = "~/img/UserIMG/" + (ViewBag.Data.PhotoName ?? "noimg.jpg");
}

<div class="panel-header panel-header-sm">
    <!--null-->
</div>
<div class="content-center content">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="title text-center">Profile</h5>
                </div>
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-controller="Account" asp-action="EditProfile" method="post">
                        <div class="row">
                            <div asp-validation-summary="All" class="text-danger col-md-12"></div>
                            <div class="text-danger col-md-12">@ViewBag.ErrorMsg</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Id" class="control-label"></label>
                                    <input asp-for="Id" type="text" disabled="disabled" value="@ViewBag.Data.Id" class="form-control" />
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" type="text" value="@ViewBag.Data.UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" value="@ViewBag.Data.Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" value="@ViewBag.Data.Address" type="text" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" type="text" value="@ViewBag.Data.FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" type="text" value="@ViewBag.Data.LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" type="number" value="@ViewBag.Data.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gender" class="control-label"></label>
                                    @if (ViewBag.Data.Gender == true)
                                    { //male
                                        <select asp-for="Gender" class="form-control">
                                            <option selected="selected" value="1">Male</option>
                                            <option value="0">Female</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select asp-for="Gender" class="form-control">
                                            <option value="1">Male</option>
                                            <option selected="selected" value="0">Female</option>
                                        </select>
                                    }
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="custom-file">
                                        <label id="fileLabel" asp-for="Photo" class="custom-file-label">@ViewBag.Data.PhotoName</label>
                                        <input id="fileInput" type="file" accept="image/png, image/jpg" asp-for="Photo" class="form-control custom-file-input" />
                                    </div>
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" class="col-md-12 btn btn-round btn-primary btn-block" value="Edit Profile" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-user">
                <div class="image">
                    <img src="~/img/UserIMG/bg5.jpg" alt="...">
                </div>
                <div class="card-body">
                    <div class="author">
                        <a href="#">
                            <img class="avatar border-gray" src="@PhotoPath" asp-append-version="true" alt="...">
                            <h5 class="title">@ViewBag.Data.FirstName @ViewBag.Data.LastName</h5>
                        </a>
                        <p class="description">
                            Email: @ViewBag.Data.Email <br>
                            Address: @ViewBag.Data.Address <br>
                            Phone Number: @ViewBag.Data.PhoneNumber <br>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="button-container">
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-twitter"></i>
                    </button>
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-google-plus-g"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
